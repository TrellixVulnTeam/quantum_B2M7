[windows]
{% for host in vars.groups.windows %}
{{ host }}  quantum_host={{ hostvars[host]['quantum_host'] }} quantum_user={{ hostvars[host]['quantum_user'] }}{{ ' quantum_ssh_private_key_file=' ~ hostvars[host]['quantum_ssh_private_key_file'] if (hostvars[host]['quantum_ssh_private_key_file']|default()) else '' }}
{% endfor %}

[windows:vars]
quantum_shell_type={{ test_shell_type }}
quantum_connection=ssh
quantum_port=22
# used to preserve the existing environment and not touch existing files
quantum_ssh_extra_args="-o UserKnownHostsFile=/dev/null"
quantum_ssh_host_key_checking=False
